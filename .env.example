# API Configuration
# Port number for the backend API server (default: 8000)
EXPO_PUBLIC_API_PORT=8000

# Full API URL for production override (optional)
# Leave empty for development, set to production URL for production builds
# EXPO_PUBLIC_API_URL=https://api.production.com/api/v1

# Development Auto-Login
# Auto-login with test credentials on app start (true/false)
# - Set to 'true' to skip login screen during development (faster testing)
# - Set to 'false' or remove to test real authentication flow
# IMPORTANT: Always disable before testing authentication features!
EXPO_PUBLIC_DEV_AUTO_LOGIN=true

# Test user email for auto-login
EXPO_PUBLIC_DEV_TEST_EMAIL=devtest@glide.app

# Test user password for auto-login
EXPO_PUBLIC_DEV_TEST_PASSWORD=test123

# API Endpoints (Development) - for reference/curl testing
API_BASE_URL=http://192.168.1.6:8000/api/v1
API_DOCS_URL=http://192.168.1.6:8000/docs
EXPO_URL=http://localhost:8081

# Quick Login Command:
# curl -s http://localhost:8000/api/v1/auth/login -H "Content-Type: application/x-www-form-urlencoded" -d "username=devtest@glide.app&password=test123"
